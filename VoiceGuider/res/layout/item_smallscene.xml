<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.ne.voiceguider"
    android:id="@+id/smallscene_layout"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" >

        <TextView
            android:id="@+id/smallscene_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市名称"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/smallscene_pinyin_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text=""
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/smallscene_right_imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/fav_music" />
        
    </RelativeLayout>

</RelativeLayout>

